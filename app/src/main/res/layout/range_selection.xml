<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <org.jaagrT.widgets.rangebar.RangeBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:barWeight="1sp"
        app:connectingLineColor="@color/teal_400"
        app:connectingLineWeight="1dp"
        app:pinColor="@color/teal_400"
        app:rangeBar="false"
        app:rangeBarColor="@color/black"
        app:selectorColor="@color/teal_400"
        app:tickColor="@color/white"
        app:tickEnd="15"
        app:tickInterval="1"
        app:tickStart="0" />

</LinearLayout>