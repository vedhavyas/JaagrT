<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/holo_orange_dark" />
                </shape>
            </item>

            <item android:bottom="5dp" android:left="5dp" android:right="70dp" android:top="5dp">
                <bitmap android:gravity="start" android:src="@drawable/ic_gallery" />
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                </shape>
            </item>

            <item android:bottom="5dp" android:left="5dp" android:right="70dp" android:top="5dp">
                <bitmap android:gravity="start" android:src="@drawable/ic_gallery" />
            </item>

        </layer-list>
    </item>

</selector>